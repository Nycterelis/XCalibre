@using XCalibre.Models.Helpers;
@using XCalibre.Models;
@using XCalibre.Controllers
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;

@model IEnumerable<XCalibre.Models.AdminUserViewModel>

@{
    ViewBag.Title = "Index";
}





<h2>Manage User Roles and Projects</h2>
@Html.AntiForgeryToken()

<table class="table">
    <tr>
        <th>
           <p> @Html.DisplayNameFor(model => model.User.FirstName) @Html.DisplayNameFor(model => model.User.LastName)</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Roles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.Projects)
        </th>
    </tr>

    @foreach (var u in Model)
    {
        <tr>
            <td>
               <p> @Html.DisplayFor(model => u.User.FirstName) @Html.DisplayFor(model => u.User.LastName)</p>
            </td>
            
            <td>
                <p>
                    @{ string roleString = string.Join(", ", u.SelectedRoles);
                        @roleString;
                        }
                </p>
            </td>
            <td>@*Need to Add List of projects in this column*@
                <p>
                    
                </p>
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new { id = u.User.Id })
                    
            </td>

        </tr>
    }

</table>
               


